page {
    background: #EEEDF2;
}

.container {
    padding: 12px 0;
}

.item {
    width: 94%;
    height: auto;
    background: #fff;
    margin: 0 3% 20rpx 3%;
    overflow: hidden;
}

.item .h2 {
    width: 94%;
    text-align: center;
    color: #999;
    border-bottom: 1px #f2f2f2 solid;
    padding: 10px 3%;
    display: flex;
}

.item .h2 text {
    flex: 1;
}

.datetime {
    font-size: 26rpx;
    color: #999;
    width: 90%;
    display: flex;
    padding: 3% 5%;
}

.datetime .tm {
    flex: 1;
    text-align: right;
    overflow: hidden;
    position: relative;
    padding-left: 15px;
}

.datetime .pl text {
    float: left;
}

.datetime .tm text {
    float: right;
}

.datatxt {
    width: 100%;
    height: 55px;
    border-bottom: 1px #f2f2f2 dashed;
    padding: 10px 10px;
    color: #333;
    display: flex;
}

.datatxt .img {
    flex: 1;
}

.datatxt .img image {
    width: 55px;
    height: 55px;
    border-radius: 50px;
}

.datatxt .txt {
    flex: 11;
    padding-left: 10px;
}

.datatxt .txt text {
    width: 100%;
    display: block;
    font-weight: bold;
    padding-top: 8px;
}

.datatxt .txt label {
    width: 100%;
    display: block;
    color: #666;
}

.noData {
    width: 100%;
    text-align: center;
    padding-top: 50px;
    color: #666;
}

.code {
    width: 100%;
    border-top: 1px #f2f2f2 solid;
    text-align: center;
    padding-bottom: 20px;
}

.code text {
    width: 100%;
    display: inline-block;
    padding: 10px 0;
}

.code image {
    width: 240px;
    height: 240px;
}