.avatarIndex {
    width: 100%;
    height: 100%;
    text-align: center;
    background: #fff;
    padding-bottom: 15px;
}

.avatar-container {
    position: relative;
    text-align: center;
    padding-top: 50%;
}

.avatar {
    width: 94%;
    height: 360px;
    margin: 3%;
    background: #F5F5F5;
}

.item {
    line-height: 2.5rem;
    background: #00AA80;
    color: #fff;
    margin: 0 5%;
    border-radius: 50px;
}

.tixing {
    width: 100%;
    padding: 10px 0 0 0;
    color: #666;
}