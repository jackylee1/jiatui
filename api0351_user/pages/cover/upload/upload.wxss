.cropper {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 998;
}

.cropper-buttons {
    position: absolute;
    bottom: 0;
    left: 0;
    z-index: 999;
    width: 100%;
    display: flex;
    height: 50px;
    line-height: 50px;
}

.cropper-buttons .getCropperImage {
    text-align: center;
    flex: 1;
    background: #E2E2E2;
}

.cropper-buttons .upload {
    text-align: center;
    flex: 1;
}